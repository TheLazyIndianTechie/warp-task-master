{
  "_comment": "Configuration file for itch.io API authentication",
  "auth": {
    "type": "api_key",
    "apiKey": "YOUR_API_KEY_HERE",
    "oauthToken": null,
    "jwtToken": null,
    "autoRefresh": true,
    "baseUrl": "https://itch.io/api/1"
  },
  "oauth": {
    "clientId": "YOUR_OAUTH_CLIENT_ID",
    "redirectUri": "https://your-app.com/oauth/callback",
    "scopes": ["profile:me"],
    "baseUrl": "https://itch.io"
  },
  "environment": {
    "_comment": "You can also use environment variables instead of config file",
    "variables": {
      "ITCHIO_API_KEY": "Your API key from https://itch.io/api-keys",
      "ITCHIO_OAUTH_TOKEN": "OAuth access token after authorization",
      "ITCHIO_JWT_TOKEN": "JWT token from app manifest"
    }
  },
  "examples": {
    "api_key": {
      "description": "Most common - use API key from itch.io settings",
      "type": "api_key",
      "apiKey": "your_long_api_key_string_here"
    },
    "oauth": {
      "description": "For apps acting on behalf of users",
      "type": "oauth",
      "oauthToken": "oauth_access_token_from_authorization_flow"
    },
    "jwt": {
      "description": "For games integrated with itch.io app",
      "type": "jwt",
      "jwtToken": "jwt_token_from_app_manifest"
    }
  }
}
